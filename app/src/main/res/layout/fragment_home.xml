<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView
    android:focusedByDefault="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/eseo_logo"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            />
        <TextView
            android:id="@+id/txtView_explication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cliquez sur l'item pour le dÃ©rouler"
            android:textStyle="bold"
            android:textColor="@color/violet_1"
            android:gravity="center"
            android:padding="5dp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_marginBottom="10dp"
            >


        <TextView
            android:id="@+id/txtView_MyProjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mes projets"
            android:textStyle="bold"
            android:textColor="@color/violet_1"
            android:gravity="center"
            android:padding="5dp"
            />
        </androidx.cardview.widget.CardView>

            <ProgressBar
                android:id="@+id/progressBar_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_margin="15dp"
                />

            <ListView
                android:id="@+id/listViewProjets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_marginBottom="10dp"
            >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mes Jury - Rappels"
                    android:textStyle="bold"
                    android:textColor="@color/violet_1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:id="@+id/txtView_myJuryTitle"
                    />

                <ProgressBar
                    android:id="@+id/progressBar_home_jury"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_margin="15dp"
                    ></ProgressBar>


        </androidx.cardview.widget.CardView>


                <ListView
                    android:id="@+id/listViewJury"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/GivenNote"
                    android:textStyle="bold"
                    android:textColor="@color/violet_1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:id="@+id/txtView_titleAnnotations"
                    />


                <ListView
                    android:id="@+id/listViewAnnotations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_View_titlePseudoNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/givenMark"
                    android:textStyle="bold"
                    android:textColor="@color/violet_1"
                    android:gravity="center"
                    android:padding="5dp"
                    />

                <ListView
                    android:id="@+id/listViewPseudoNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



    </LinearLayout>
</ScrollView>

</RelativeLayout>